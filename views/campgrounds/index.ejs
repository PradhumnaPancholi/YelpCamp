<% include ../partials/header %>
    
    <!-- head-->
    <div class ="container">
        <header class = "jumbotron">
            <div class="conatiner">
                <h1>Welcome To YelpCamp</h1>
                    <p><center>View our hand-picked campgrounds from all over the world.</center></p>
                    <p>
                        <center><a class = "btn btn-primary btn-lg" href = "/campgrounds/new">Add new campground</a></center>
                    </p>
            </div>     
        </header>

    <!--css grid for popular campgrounds-->
        <div class="row text-center">
            <% campgrounds.forEach(function(campground){ %>
                <div class ="col-md-3 col-sm-6">
                    <div id="campcard" class = "card">
                        <img class = 'card-img-top' src ="<%= campground.image %>">
                        <div class="card-title">
                            <h4><%= campground.name%></h4>
                        </div>
                        <p>
                            <a  href = "/campgrounds/<%= campground._id %>" class = "btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

<% include ../partials/footer %>